#!/bin/sh

# Pre-commit hook for Rust project
# This hook will run before every commit to ensure code quality

echo "ğŸ” Running pre-commit checks..."

# 1. Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt -- --check; then
    echo "âŒ Code is not formatted. Please run 'cargo fmt' before committing."
    exit 1
fi

# 2. Clippy lints
echo "ğŸ”§ Running clippy..."
if ! cargo clippy -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
fi

# 3. Quick compile check
echo "âš™ï¸  Checking compilation..."
if ! cargo check; then
    echo "âŒ Compilation failed. Please fix errors before committing."
    exit 1
fi

# 4. SQLx prepare (requires running database)
echo "ğŸ“¦ Running cargo sqlx prepare..."
if cargo sqlx prepare 2>/dev/null; then
    # Auto-stage updated .sqlx/ files
    git add .sqlx/
    echo "âœ… SQLx offline data updated and staged."
else
    echo "âš ï¸  cargo sqlx prepare skipped (database not available)."
fi

echo "âœ… All pre-commit checks passed!"
